/*SOUND SENSOR*/
	"sound": {
		"peripheral_type":"grove_sound_sensor",
		"port": ["A0","A1","A2"],
		"sound_detect": "detected"
	},

/*ULTRASONIC SENSOR*/
	"ultrasonic": {
		"peripheral_type": "grove_ultrasonic_sensor",
		"port": ["D2","D3","D4","D5","D6","D7","D8"],
		"range_threshold": "range_in_cm"
	},

/*LIGHT SENSOR*/
	"light": {
		"peripheral_type": "grove_light_sensor",
		"port": ["A0","A1","A2"],
		"light_value": "light_val"
	},

/*MOTION SENSOR*/
	"motion": {
		"peripheral_type": "grove_motion_sensor",
		"port": ["D2","D3","D4","D5","D6","D7","D8"],
		"motion_detect": "detected"
	},

/*INFRARED SENSOR*/
	"infrared": {
		"peripheral_type": "grove_infrared_sensor",
		"port": ["D2","D3","D4","D5","D6","D7","D8"],
		"ir_detect": "detected"
	},

