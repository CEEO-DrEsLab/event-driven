{
  "portConfig": {
    "ev3Port1": "ev3TouchSensor",
    "ev3Port2": "ev3TouchSensor",
    "ev3PortA": "ev3LargeMotor"
  },
  "triggers": [
    {
      "port": "ev3Port1",
      "mode": "press",
      "actions": [
        {
          "port": "ev3PortA",
          "mode": "start",
          "settings": {
            "direction": "backward",
            "power": "low"
          }
        }
      ]
    },
    {
      "port": "ev3Port1",
      "mode": "release",
      "actions": [
        {
          "port": "ev3PortA",
          "mode": "start",
          "settings": {
            "direction": "forward",
            "power": "low"
          }
        }
      ]
    },
    {
      "port": "ev3Port2",
      "mode": "press",
      "actions": [
        {
          "port": "ev3PortA",
          "mode": "stop",
          "settings": {
            "stopType": "coast"
          }
        }
      ]
    }
  ]
}